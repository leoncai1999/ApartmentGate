<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/filtersLabelTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Filters"
        android:textStyle="bold"
        android:textSize="24sp"
        android:fontFamily="@font/poppins_black"
        android:textColor="@color/dustyBlue"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <TextView
            android:id="@+id/filtersDescTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose one filter."
            android:textStyle="italic"
            android:textSize="12sp"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/maxRentLabelTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Maximum rent"
            android:textSize="12sp"
            android:layout_marginBottom="6dp"/>

        <Spinner
            android:id="@+id/maxRentSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/minSizeLabelTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Minimum size in square feet"
            android:textSize="12sp"
            android:layout_marginBottom="6dp"/>

        <Spinner
            android:id="@+id/minSizeSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/minBedsLabelTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Minimum bedrooms"
            android:textSize="12sp"
            android:layout_marginBottom="6dp"/>

        <Spinner
            android:id="@+id/minBedsSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"/>

        <!--

        <TextView
            android:id="@+id/maxCommuteTimeLabelTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Maximum commute time"
            android:textSize="12sp"
            android:layout_marginBottom="6dp"/>

        <Spinner
            android:id="@+id/maxCommuteTimeSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"/>

           -->

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/setFiltersButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Go Back" />

        <Button
            android:id="@+id/resetFiltersButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Reset Filters" />

    </LinearLayout>



</LinearLayout>