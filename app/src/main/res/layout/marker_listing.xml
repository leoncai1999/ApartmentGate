<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/markerApartmentName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apartment Name"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/markerApartmentAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apartment Address"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/rentImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_money_black_24dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"/>

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/markerRent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X,XXX - X,XXX"
            android:layout_weight="1"/>

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/bedsImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_bed_black_24dp"
            android:layout_weight="1"/>

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/markerBeds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Studio - 2 Beds"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <Button
        android:id="@+id/markerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Details"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>

</LinearLayout>